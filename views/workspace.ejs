<!DOCTYPE html>
<html lang="ja">
  <head>
    <title><%= title %>のWorkSpace</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <link rel='stylesheet' href='/stylesheets/workspace.css'>
  </head>
  <body>
    <div id="wrapper">
    <h1><%= title %>のWorkSpace</h1>
    <% layout('layout') %>
    <% if(workspaceList.length) { %>
      <% workspaceList.forEach(function(workspaceItem) { %>
        <a href="/editor/<%= user.user_id %>/<%= workspaceItem.workspace_id %>" class="workspace__name">
          <li class="box">
          <%= workspaceItem.workspace_name %>
        </a>
        <p class="workspace-date">作成日：<%= workspaceItem.created_at %></p>
      <% }); %>
      </li>
    <% } %>
    <form action="/workspace/<%= user.user_id %>" method="post" class="workspace-form">
      ワークスペース名：<input type="text" name="workspace_name" class="input" required>
    <br/>
    <br/>
    <button type="submit" class="create-btn">ワークスペース作成</button>
    </form>
    <!-- ログインユーザの表示 -->
    <% if (typeof user !== 'undefined') { %>
      <span class="login-user"><%= user.user_name %>さんとしてログインしています</span>
    <% } %>
    </div>
  </body>
</html>
